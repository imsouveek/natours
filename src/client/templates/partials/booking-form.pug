block booking-form
  section.section-book
    .row
      .book
        .book__form
          .u-margin-bottom-medium
            h2.heading-secondary
              | Start Booking Now

          form.form(action="#")
            .form__group
              input.form__input(
                id="name"
                type="text"
                placeholder="Full Name"
                required
                autocomplete="off"
              )
              label.form__label(for="name") Full Name

            .form__group
              input.form__input(
                id="email"
                type="email"
                placeholder="Email Address"
                required
                autocomplete="off"
              )
              label.form__label(for="email") Email Address

            .form__group.u-margin-bottom-medium
              .form__radio-group
                input.form__radio-input(type="radio" id="small" name="size")
                label.form__radio-label(for="small")
                  span.form__radio-button
                  | Small tour group
              .form__radio-group
                input.form__radio-input(type="radio" id="large" name="size")
                label.form__radio-label(for="large")
                  span.form__radio-button
                  | Large tour group

            .form__group
              button.btn.btn--green Next Step &rarr;
